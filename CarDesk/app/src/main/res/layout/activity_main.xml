<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/fuel_button"
        android:layout_width="70sp"
        android:layout_height="80sp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:src="@drawable/button_fuel" />
    <ImageButton
        android:id="@+id/oil_button"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="30dp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:src="@drawable/button_oil" />
    <ImageButton
        android:id="@+id/lamp_button"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_below="@id/fuel_button"
        android:layout_toRightOf="@id/fuel_button"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:src="@drawable/button_lamp" />
    <ImageButton
        android:id="@+id/tyre_button"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="40dp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:src="@drawable/button_tyre" />
    <ImageButton
        android:id="@+id/other_button"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="250dp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:src="@drawable/button_other" />
    <ImageButton
        android:id="@+id/ins_button"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="150dp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:src="@drawable/button_ins" />


</RelativeLayout>