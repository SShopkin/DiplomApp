<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/simeon">

    <ImageButton
        android:id="@+id/fuel_button"
        android:layout_width="70sp"
        android:layout_height="80sp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:src="@drawable/button_fuel"
        android:layout_above="@+id/lamp_button"
        android:layout_alignRight="@+id/ins_button"
        android:layout_alignEnd="@+id/ins_button" />
    <ImageButton
        android:id="@+id/oil_button"
        android:layout_width="120sp"
        android:layout_height="100sp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:src="@drawable/button_oil"
        android:layout_alignTop="@+id/lamp_button"
        android:layout_toLeftOf="@+id/ins_button"
        android:layout_toStartOf="@+id/ins_button" />
    <ImageButton
        android:id="@+id/lamp_button"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:src="@drawable/button_lamp"
        android:layout_above="@+id/other_button"
        android:layout_toRightOf="@+id/fuel_button"
        android:layout_toEndOf="@+id/fuel_button" />
    <ImageButton
        android:id="@+id/tyre_button"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:src="@drawable/button_tyre"
        android:layout_marginRight="28dp"
        android:layout_below="@+id/oil_button"
        android:layout_toLeftOf="@+id/ins_button"
        android:layout_toStartOf="@+id/ins_button" />
    <ImageButton
        android:id="@+id/other_button"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:src="@drawable/button_other"
        android:layout_above="@+id/ins_button"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/lamp_button"
        android:layout_alignStart="@+id/lamp_button" />
    <ImageButton
        android:id="@+id/ins_button"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:src="@drawable/button_ins"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>