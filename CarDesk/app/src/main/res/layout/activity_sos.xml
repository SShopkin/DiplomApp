<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/backgroundOrange"
    tools:context="com.monimont.cardesk.SOSActivity">

    <View
        android:id="@+id/statusBarBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/navigationBarOrange"
        android:layout_alignBottom="@id/statusBarBackground"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/sos_call"
        android:id="@+id/textView2"
        android:textSize="25sp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/europe"
        android:paddingLeft="46dp"
        android:paddingRight="47dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        ads:fb_borderColor="@color/accentOrange"
        ads:fb_borderWidth="1dp"
        ads:fb_defaultColor="@color/navigationBarOrange"
        ads:fb_focusColor="@color/lightOrange"
        ads:fb_radius="5dp"
        ads:fb_text="@string/sos_europe"
        ads:fb_textColor="@color/black"
        android:layout_marginTop="87dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/northAmerica"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        ads:fb_borderColor="@color/accentOrange"
        ads:fb_borderWidth="1dp"
        ads:fb_defaultColor="@color/navigationBarOrange"
        ads:fb_focusColor="@color/lightOrange"
        ads:fb_radius="5dp"
        ads:fb_text="@string/sos_north_america"
        ads:fb_textColor="@color/black"
        android:layout_above="@+id/australia"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/southAmerica"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        ads:fb_borderColor="@color/accentOrange"
        ads:fb_borderWidth="1dp"
        ads:fb_defaultColor="@color/navigationBarOrange"
        ads:fb_focusColor="@color/lightOrange"
        ads:fb_radius="5dp"
        ads:fb_text="@string/sos_south_america"
        ads:fb_textColor="@color/black"
        android:layout_alignTop="@+id/australia"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/australia"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        ads:fb_borderColor="@color/accentOrange"
        ads:fb_borderWidth="1dp"
        ads:fb_defaultColor="@color/navigationBarOrange"
        ads:fb_focusColor="@color/lightOrange"
        ads:fb_radius="5dp"
        ads:fb_text="@string/sos_australia"
        ads:fb_textColor="@color/black"
        android:layout_below="@+id/europe"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_sos"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </com.google.android.gms.ads.AdView>



</RelativeLayout>
